{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "static/**", ".svelte-kit/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "schema:generate": {
      "inputs": ["src/config/types.ts"],
      "outputs": ["static/schema/*.schema.json"]
    }
  }
}
